<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Include Bootstrap CDN  -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Include your public style sheet -->
    <link href="./css/style.css" rel="stylesheet" />
    <title>ShareSphere Main Page</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon-light.ico" />
  </head>

  <body>

    <div class="container-fluid">
      <header>
        <!-- Hero -->
        <div class="hero-image d-flex position-relative">
          <div
            class="position-absolute w-100 h-100"
            style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7));"
          ></div>
          <img
            src="/images/landing_page/Landing_Page_Hero.png"
            alt="Skyline of San Francisco featuring the three painted ladies at dusk"
            class="w-100 h-100 object-fit-cover"
          />
          <div class="hero-text text-white">
            <div class="container">
              <h1 class="mb-3 display-2">ShareSphere</h1>
              <h2 class="mb-3">Connect, Share, Thrive: Your Personalized
                Community Sharing Hub</h2>
              {{#if logged_in}}
                <h5>You Are Logged In!</h5>
              {{/if}}
            </div>
          </div>
        </div>
        <!-- Hero -->

        <!-- Bootstrap navbar  -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container-fluid">
            <a class="navbar-brand" href="/">ShareSphere</a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarNav"
              aria-controls="navbarNav"
              aria-expanded="false"
              aria-label="Toggle navigation"
              style="background-color: #443FDE;"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div
              class="collapse navbar-collapse justify-content-end"
              id="navbarNav"
            >
              <ul class="navbar-nav">
                <li class="nav-item active">
                  <a class="nav-link" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item dropdown active">
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  >
                    Communities
                  </a>
                  <ul class="dropdown-menu">
                    <li><a
                        class="dropdown-item"
                        href="/community/2"
                      >Peninsula</a></li>
                    <li><a class="dropdown-item" href="/community/3">South Bay</a></li>
                    <li><a class="dropdown-item" href="/community/1">East Bay</a></li>
                  </ul>
                </li>
                <li class="nav-item">
                  <a
                    class="nav-link active"
                    aria-current="page"
                    href="/messageBoard"
                  >Message Board</a>
                </li>
                {{#if logged_in}}
                  <li class="nav-item">
                    <a class="nav-link" href="/profile">Profile</a>
                  </li>
                {{/if}}
                <li class="nav-item">
                  {{#if logged_in}}
                    <a class="nav-link btn btn-outline-light" id="logout">Log
                      Out</a>
                  {{else}}
                    <a class="nav-link btn btn-primary" href="/loginSignup">Log
                      In/Sign Up</a>
                  {{/if}}
                </li>
              </ul>
            </div>
          </div>
        </nav>
        <!-- Bootstrap navbar  -->
      </header>
    </div>

    <main class="container mt-5">
      {{{body}}}
    </main>

    <!-- Footer  -->
    <footer
      class="bg-light text-center text-lg-start"
      style="margin-top: 50px;"
    >
      <div class="container p-4">
        <div class="text-center p-3">
          <!-- Copyright -->
          &copy; 2024 Made with ❤️ by Team 2 Coast to Coast for ShareSphere
        </div>
        <!-- Copyright -->
      </div>
    </footer>
    <!-- Footer  -->

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://widget.cloudinary.com/v2.0/global/all.js"
      type="text/javascript"
    ></script>
    <script src="/js/cloudinary.js" type="text/javascript"></script>

  </body>

</html>